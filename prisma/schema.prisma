generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum SessionStatus {
  PROCESSED
  FLAGGED_FOR_REVIEW
  SAFE
  RISK
}

enum SafetyFlag {
  SAFE
  RISK
}

enum ReviewDecision {
  VALIDATED
  REJECTED
  OVERRIDDEN
}

model Supervisor {
  id           String  @id @default(cuid())
  name         String
  email        String  @unique
  passwordHash String?

  fellows  Fellow[]
  sessions Session[]
  reviews  SupervisorReview[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fellow {
  id           String @id @default(cuid())
  supervisorId String
  name         String

  supervisor Supervisor @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  sessions   Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([supervisorId])
}

model Session {
  id             String        @id @default(cuid())
  supervisorId   String
  fellowId       String
  groupId        String
  occurredAt     DateTime
  transcriptText String
  finalStatus    SessionStatus?

  supervisor Supervisor @relation(fields: [supervisorId], references: [id], onDelete: Cascade)
  fellow     Fellow     @relation(fields: [fellowId], references: [id], onDelete: Cascade)
  analysis   AIAnalysis?
  review     SupervisorReview?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([supervisorId])
  @@index([fellowId])
  @@index([occurredAt])
}

model AIAnalysis {
  id            String     @id @default(cuid())
  sessionId     String     @unique
  resultJson    Json
  safetyFlag    SafetyFlag
  riskQuotes    String[]   @default([])
  model         String
  promptVersion String
  latencyMs     Int?
  transcriptCharsSent Int?
  transcriptWasTruncated Boolean?
  createdAt     DateTime   @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([safetyFlag])
}

model SupervisorReview {
  id           String         @id @default(cuid())
  sessionId    String         @unique
  supervisorId String
  decision     ReviewDecision
  finalStatus  SessionStatus
  note         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  session    Session    @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  supervisor Supervisor @relation(fields: [supervisorId], references: [id], onDelete: Cascade)

  @@index([supervisorId])
}
