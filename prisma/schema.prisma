generator client {
  provider = "prisma-client"
  output   = "../_app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Supervisor {
  id           String  @id @default(cuid())
  name         String
  email        String  @unique
  passwordHash String?

  fellows Fellow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fellow {
  id           String @id @default(cuid())
  supervisorId String
  name         String

  supervisor Supervisor @relation(fields: [supervisorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([supervisorId])
}
